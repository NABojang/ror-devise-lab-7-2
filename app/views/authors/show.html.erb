<p id="notice"><%= notice %></p>
<h2>Name:<%= @author.first_name %></h2>
<h3>Surname:<%= @author.last_name %></h3>
<h3>Age:<%= @author.age %></h3>
<hr>


<h3>Books</h3>
<% @author.books.each do |book| %>
  <div class="well">
    <p><strong><%= book.title %></strong>:
      <%= book.title %>
      <%= book.body %>
      <%= book.page_count %>
        <%= book.author_id %>
      <%= link_to '[X]', [book.authors, book], method: :delete,
      data: {confirm: "Are you sure?"} %>
    </p>
  </div>
<% end %>

<%= link_to 'New Book', new_book_path %>

<hr>
<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
<hr>
